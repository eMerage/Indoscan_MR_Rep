<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relativelayout_bottom_menu_bar"
            android:layout_below="@+id/relativelayout_title_bar"
            android:background="@color/colorPrimaryDark">


            <include
                android:id="@+id/include_nointernt"
                layout="@layout/commen_nointernet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/relativeLayout_visits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_background"
                android:elevation="5dp"
                android:visibility="visible">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/relativeLayout1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">


                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratRegular
                                    android:id="@+id/montserratRegular1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Bill Date : "
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:visibility="visible" />


                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratLight
                                    android:id="@+id/montserratRegular2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="90dp"
                                    android:layout_marginTop="5dp"
                                    android:text=""
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="20dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_date_range_black_24dp" />


                            </RelativeLayout>




                            <RelativeLayout
                                android:id="@+id/relativeLayout2"
                                android:layout_below="@+id/relativeLayout1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">


                                <Spinner
                                    android:id="@+id/spinner2"
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="140dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_height="match_parent" />

                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratRegular
                                    android:id="@+id/montserratRegular3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Ex.Main Category"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:visibility="visible" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/relativeLayout3"
                                android:layout_below="@+id/relativeLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">


                                <Spinner
                                    android:id="@+id/spinner3"
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="140dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_height="match_parent" />

                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratRegular
                                    android:id="@+id/montserratRegular4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Ex.Sub Category"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:visibility="visible" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/relativeLayout4"
                                android:layout_below="@+id/relativeLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">


                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratLightEdittext
                                    android:id="@+id/editText_ref"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:layout_marginLeft="140dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_centerVertical="true"
                                    android:textSize="14sp"
                                    android:inputType=""
                                    android:hint="Referance"/>

                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratRegular
                                    android:id="@+id/montserratRegular5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Special Ref."
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:visibility="visible" />

                            </RelativeLayout>


                            <emerge.project.mr_indoscan_rep.ui.fonts.MontserratLightEdittext
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:gravity="start|top"
                                android:hint="Description"
                                android:layout_below="@+id/relativeLayout4"
                                android:ems="10"
                                android:id="@+id/editText_des"
                                android:textSize="14sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>




                            <RelativeLayout
                                android:id="@+id/relativeLayout5"
                                android:layout_below="@+id/editText_des"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">


                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratLightEdittext
                                    android:id="@+id/editText_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:layout_marginLeft="140dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_centerVertical="true"
                                    android:textSize="14sp"
                                    android:inputType=""
                                    android:hint="Bill amount"/>

                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratRegular
                                    android:id="@+id/montserratRegular7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Amount"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:visibility="visible" />

                            </RelativeLayout>





                            <RelativeLayout
                                android:id="@+id/relativeLayout_paymentmages"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/relativeLayout5">


                                <emerge.project.mr_indoscan_rep.ui.fonts.MontserratRegular
                                    android:id="@+id/montserratRegular8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Bill Reference"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:visibility="visible" />


                                <ImageView
                                    android:id="@+id/imageView_payment_image"
                                    android:layout_width="100dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/montserratRegular8"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/noimage"
                                    android:layout_height="100dp"/>
                                <ImageView
                                    android:id="@+id/imageView_payment_image_cam_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_camera_green"/>
                            </RelativeLayout>



                            <RelativeLayout
                                android:id="@+id/relativeLayout_addedimages"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/relativeLayout_paymentmages">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recyclerView_iamges"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"

                                    android:background="@color/colorWhite" />




                            </RelativeLayout>




                            <emerge.project.mr_indoscan_rep.ui.fonts.MontserratRegularButton
                                android:id="@+id/btn_add_expen"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/relativeLayout_addedimages"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="40dp"
                                android:textSize="14sp"
                                android:layout_marginRight="40dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/bg_selector_gold"
                                android:text="Add Expense"
                                android:textColor="@color/colorPrimaryDark" />

                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Expenses"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_navigation_menu" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_bottom_menu_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                app:itemBackground="@color/colorPrimaryDark"
                app:itemIconTint="@android:color/white"
                app:itemTextColor="@android:color/white"
                app:menu="@menu/bottom_navigation" />


        </RelativeLayout>


        <include
            android:id="@+id/include_progres"
            layout="@layout/commen_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:background="@color/colorWhite"
        android:layout_gravity="start">

        <include
            android:id="@+id/include_navigation"
            layout="@layout/commen_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>